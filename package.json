{
  "name": "resume",
  "version": "1.0.0",
  "homepage": "https://github.com/killercao/resume",
  "private": true,
  "scripts": {
    "build-css":
      "node-sass-chokidar --include-path ./node_modules/ ./src/ -o ./src/",
    "watch-css": "yarn build-css --watch --recursive",
    "start": "yarn watch-css & react-scripts start",
    "build": "NODE_ENV=production yarn run build-css && react-scripts build",
    "github": "yarn build && ghp-import -p build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-scripts": "^1.1.4",
    "styled-components": "^3.2.6"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.19.1",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.71.0",
    "husky": "^1.0.0-rc.9",
    "lint-staged": "^7.2.0",
    "node-sass-chokidar": "^1.2.2",
    "normalize.css": "^8.0.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2"
  }
}
